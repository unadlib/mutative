{
  "name": "mutative",
  "version": "0.2.1",
  "description": "Efficient creation of immutable state",
  "main": "dist/index.js",
  "module": "dist/mutative.esm.js",
  "unpkg": "dist/mutative.umd.production.min.js",
  "types": "dist/index.d.ts",
  "files": [
    "dist",
    "src"
  ],
  "scripts": {
    "test": "jest",
    "clean": "rimraf dist",
    "perf": "cd test/performance && ts-node add-data.ts && ts-node todo.ts && ts-node incremental.ts",
    "performance": "cd test/performance && ts-node index.ts",
    "benchmark": "cd test/performance && ts-node benchmark.ts",
    "performance:set-map": "cd test/performance && ts-node set-map.ts",
    "performance:big-object": "cd test/performance && ts-node big-object.ts",
    "performance:sample": "cd test/performance && ts-node sample.ts",
    "performance:array-object": "cd test/performance && ts-node array-object.ts",
    "performance:all": "yarn perf && yarn performance && yarn performance:set-map && yarn performance:big-object && yarn performance:sample && yarn performance:array-object",
    "build": "tsdx build --format esm,cjs,umd",
    "build:doc": "rimraf docs && typedoc --out docs src/index.ts --readme none",
    "commit": "yarn git-cz",
    "size": "size-limit",
    "analyze": "size-limit --why"
  },
  "size-limit": [
    {
      "path": "dist/mutative.cjs.production.min.js",
      "limit": "5 KB"
    },
    {
      "path": "dist/mutative.esm.js",
      "limit": "5 KB"
    }
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/unadlib/mutative.git"
  },
  "author": "unadlib",
  "keywords": [
    "mutative",
    "immutable",
    "mutable",
    "mutation"
  ],
  "license": "MIT",
  "engines": {
    "node": ">=12.2.0"
  },
  "bugs": {
    "url": "https://github.com/unadlib/mutative/issues"
  },
  "homepage": "https://github.com/unadlib/mutative#readme",
  "devDependencies": {
    "@size-limit/preset-small-lib": "^8.1.0",
    "@size-limit/webpack": "^8.1.0",
    "@size-limit/webpack-why": "^8.1.0",
    "@types/jest": "^27.4.1",
    "@types/node": "^17.0.21",
    "@typescript-eslint/eslint-plugin": "^5.15.0",
    "@typescript-eslint/parser": "^5.15.0",
    "benchmark": "^2.1.4",
    "commitizen": "^4.2.4",
    "deep-freeze": "^0.0.1",
    "eslint": "^8.11.0",
    "eslint-config-airbnb": "^19.0.4",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-import": "^2.25.4",
    "eslint-plugin-prettier": "^4.0.0",
    "immer": "^9.0.12",
    "immutable": "^4.0.0",
    "jest": "^27.5.1",
    "jsdoc-tests": "^0.1.1",
    "json2csv": "^5.0.7",
    "lodash": "^4.17.21",
    "prettier": "^2.5.1",
    "redux": "^4.2.0",
    "rimraf": "^3.0.2",
    "rollup": "^2.70.1",
    "rollup-plugin-terser": "^7.0.0",
    "seamless-immutable": "^7.1.4",
    "size-limit": "^8.1.0",
    "ts-jest": "^27.1.3",
    "ts-node": "^10.7.0",
    "tsdx": "^0.14.1",
    "tslib": "^2.3.1",
    "typedoc": "^0.22.13",
    "typedoc-plugin-markdown": "^3.11.14",
    "typescript": "^4.6.2",
    "yargs": "^17.3.1"
  },
  "config": {
    "commitizen": {
      "path": "cz-conventional-changelog"
    }
  },
  "jest": {
    "preset": "ts-jest",
    "globals": {
      "__DEV__": true,
      "ts-jest": {
        "tsconfig": {
          "noImplicitReturns": false,
          "noFallthroughCasesInSwitch": false,
          "noUnusedLocals": false,
          "noUnusedParameters": false
        }
      }
    }
  }
}
